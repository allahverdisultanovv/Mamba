@using MambaMVC.Areas.Admin.ViewModels
@model IEnumerable<ProfessionItemVM>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Professions</h4>
            <a asp-action="create" class="btn btn-success">Create Profession</a>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>

                                Name
                            </th>
                           
                            <th>
                                Settings
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (ProfessionItemVM itemVM in Model)
                        {

                            <tr>
                                <td>
                                    @itemVM.Name
                                </td>

                                <td>
                                    <a asp-action="Update" asp-route-id="@itemVM.Id" class="btn btn-warning"><i class="mdi mdi-grease-pencil"></i></a>
                                    <a asp-action="Delete" asp-route-id="@itemVM.Id" class="btn btn-danger"><i class="mdi mdi-delete"></i></a>
                                </td>

                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>