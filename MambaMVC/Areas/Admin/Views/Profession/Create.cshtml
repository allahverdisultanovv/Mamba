@using MambaMVC.Areas.Admin.ViewModels

@model ProfessionCreateVM
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Profession</h4>
            
            <form class="forms-sample" method="post">
                <div class="form-group row">
                    <label asp-for="Name" for="exampleInputUsername2" class="col-sm-3 col-form-label">Name</label>
                    <div class="col-sm-9">
                        <input asp-for="Name" class="form-control" id="exampleInputUsername2" placeholder="Name">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <button class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>